<body style="background-color: #000000;">
    <div class="row">
        <div class="col col-12 col-sm-8 col-md-8 col-lg-4 mx-auto">
            <div class="card mt-5 rounded" style="background-color: #ffffff;">
                <div class="card-header text-center" style="background-color: #02000c; color: #ffffff;">
                    <h1 class="h4">
                        Editar usuario
                    </h1>
                </div>
                <div class="card-body">
                    <form action="/users/edit-user" method="POST">
                        <input type="hidden" name="id" value="{{note._id}}">
                        <div class="mb-3">
                            <label for="name" style="color: #400354;">Nombre:</label>
                            <input type="text" name="name" class="form-control" style="border-color: #430157;" value="{{note.name}}">
                        </div>
                        <div class="mb-3">
                            <label for="email" style="color: #400354;">Email:</label>
                            <input type="text" name="email" class="form-control" style="border-color: #430157;" value="{{note.email}}">
                        </div>
                        <button type="submit" class="btn btn-success btn-block" style="background-color: #28a745; border-color: #28a745;">
                            Editar Usuario
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
